{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "Node16",
    "moduleResolution": "Node16",

    "rootDir": ".",
    "outDir": "dist",

    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "prisma.config.ts"],
  "exclude": ["node_modules", "dist"]
}
